{
  "schemaVersion": "1.3",
  "key": "rules",
  "name": "Rules",
  "description": "Automate Clockify time entries with if-this-then-that actions.",
  "baseUrl": "http://localhost:8080/rules",
  "minimalSubscriptionPlan": "FREE",
  "scopes": [
    "TIME_ENTRY_READ",
    "TIME_ENTRY_WRITE",
    "TAG_READ",
    "TAG_WRITE"
  ],
  "components": [
    {
      "type": "sidebar",
      "path": "/settings",
      "label": "Rules",
      "accessLevel": "ADMINS"
    }
  ],
  "lifecycle": [
    {
      "type": "INSTALLED",
      "path": "/lifecycle/installed"
    },
    {
      "type": "DELETED",
      "path": "/lifecycle/deleted"
    }
  ],
  "webhooks": [
    {
      "event": "TIME_ENTRY_UPDATED",
      "path": "/webhook"
    }
  ]
}
